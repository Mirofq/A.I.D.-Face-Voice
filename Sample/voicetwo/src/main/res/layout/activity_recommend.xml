<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.depressiontest.ReccomendActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Disclaimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Disclaimer"
            android:textColor="#0D47A1"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/keteranganDisclaimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Disclaimer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textAlignment="center"
            android:text="keteranganDisclaimer"
            android:textColor="#0D47A1"
            android:textSize="15sp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/apaItuDepresi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/keteranganDisclaimer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:onClick="browser1"
            android:text="What is depression"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/petunjukPenanganan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/apaItuDepresi"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:onClick="browser2"
            android:text="Self-help guide"
            android:textColor="#000000"
            android:textStyle="bold" />


        <Button
            android:id="@+id/MainMenu"
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/petunjukPenanganan"
            android:layout_marginTop="19dp"
            android:background="#0D47A1"
            android:text="Menu"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>




</ScrollView>
